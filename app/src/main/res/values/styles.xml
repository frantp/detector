<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>-->
    </style>

    <style name="AppTheme.Fullscreen.Detect" parent="AppTheme.Fullscreen">
        <item name="colorStyleAccent">@color/detectAccent</item>
        <item name="colorStyleBackground">@color/detectBackground</item>
    </style>

    <style name="AppTheme.Fullscreen.Enroll" parent="AppTheme.Fullscreen">
        <item name="colorStyleAccent">@color/enrollAccent</item>
        <item name="colorStyleBackground">@color/enrollBackground</item>
    </style>

    <style name="AppTheme.Fullscreen.Calibrate" parent="AppTheme.Fullscreen">
        <item name="colorStyleAccent">@color/calibrateAccent</item>
        <item name="colorStyleBackground">@color/calibrateBackground</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.ToolbarPopup" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
